<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/fragmentbackground">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--卡牌展示-->
            <RelativeLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="10dp"
                android:background="@drawable/cardbackground">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:id="@+id/ln_ap"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/ap_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <ImageView
                            android:id="@+id/ap_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <ImageView
                            android:id="@+id/ap_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/ap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <!--下载到我的卡牌组-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fragmentbackground"
                android:gravity="center_vertical"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/download"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/download"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载到我的卡组"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/download"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/huoqu"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:background="@drawable/magic"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@drawable/line"/>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="语言"
                android:paddingLeft="10dp"
                android:background="@color/fragmentbackground"
                />
            <!-- 语言切换-->
            <TextView
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中文"
                android:drawableLeft="@drawable/cn"
                android:padding="10dp"

                android:textColor="@color/white"
                android:background="@color/gray"/>
            <!--介绍-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fragmentbackground"
                android:paddingTop="40dp"
                android:padding="20dp"
                >
                <RelativeLayout
                    android:id="@+id/rel_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/red_point"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/red_point"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_toRightOf="@id/red_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="介绍"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/rel_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_background"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/white"
                        android:textSize="16dp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                       />
                </LinearLayout>


            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@drawable/line"/>

            <!--趋势-->
            <RelativeLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fragmentbackground"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <RelativeLayout
                    android:id="@+id/rel_red_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/red_point_02"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/red_point"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_toRightOf="@id/red_point_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_03"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/rel_red_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_background"
                    android:padding="20dp">

                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位：人民币（￥）"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/line_chart"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_01">
                        <Button
                            android:id="@+id/bt_onlinemoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="网络"/>
                        <Button
                            android:id="@+id/bt_offlinemoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="实体"/>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_04"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/rel_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_background"
                    android:padding="20dp"
                    android:visibility="gone">
                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/line_chart_1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位：人民币（￥）"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/line_chart_1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_02">
                        <Button
                            android:id="@+id/bt_onlinemoney1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="网络"/>
                        <Button
                            android:id="@+id/bt_offlinemoney1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="实体"/>

                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>
            <!--分享-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@drawable/line"
                />
            <LinearLayout
                android:background="@color/fragmentbackground"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/collection"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:layout_weight="1"

                            android:layout_gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/share"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@drawable/line"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
