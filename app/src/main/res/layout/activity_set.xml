<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentbackground">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/appcolor">
        <ImageView
            android:id="@+id/img_set_top_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/select_back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_set_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_setapp"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal"
        android:layout_below="@id/rl_top">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_phone_iphone_red_800_24dp"
            android:layout_below="@id/rl_top"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP"
            android:textColor="#e82929"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    /////dddddddddddddddddd


    ////ddddddddddddddddd

    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal"
        android:layout_below="@+id/lin_01">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_help_red_800_24dp"
            android:layout_below="@id/rl_top"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textColor="#e82929"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/introduce_background"
        android:layout_below="@id/ll_about">
        <RelativeLayout
            android:id="@+id/ll_problem"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见问题"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_coupleback"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_coupleback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_score"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给应用评分"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_set_about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于APP"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_set_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/introduce_background"
        android:id="@+id/lin_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@+id/ll_setapp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/ll_version"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ll_setapp"
            android:orientation="horizontal"
            android:background="@drawable/introduce_background"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP设置"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_push"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推送"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_set_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/ll_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:layout_marginTop="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:layout_centerVertical="true"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/img_clearcache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>